# Configuración de la aplicación
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_APP_NAME=HR Recruitment Platform
REACT_APP_APP_VERSION=1.0.0

# Configuración de almacenamiento
REACT_APP_STORAGE_TYPE=azure
REACT_APP_AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
REACT_APP_AZURE_CONTAINER_NAME=cv-documents

# Configuración de procesamiento
REACT_APP_QUEUE_NAME=cv-processing-queue
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_EXTENSIONS=pdf

# Configuración de UI
REACT_APP_DEFAULT_LANGUAGE=es
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true

# Configuración de API externa (opcional)
REACT_APP_AZURE_COGNITIVE_SERVICES_KEY=your_cognitive_services_key
REACT_APP_AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-region.cognitiveservices.azure.com

# Configuración de Base de datos (para desarrollo)
DATABASE_URL=postgresql://hr_user:hr_password@localhost:5432/hr_platform
REDIS_URL=redis://localhost:6379

# Configuración de seguridad
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Configuración de email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuración de logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Configuración de desarrollo
NODE_ENV=development
PORT=3000